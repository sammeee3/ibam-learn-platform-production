            className={`flex items-center px-6 py-3 rounded-lg font-medium transition-all ${
              readingMode === 'quick'
                ? 'bg-orange-600 text-white shadow-lg'
                : 'bg-gray-100 text-gray-700 hover:bg-gray-200'
