            {/* Other chunks would be implemented similarly */}
            {![0, 1, 2, 5].includes(currentChunk) && (
              <div className="text-center py-12">
                <h4 className="text-xl font-semibold text-gray-600 mb-2">
                  Content for {chunks[currentChunk].title}
